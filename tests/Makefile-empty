COMPILER = g++
CXXFLAGS = -Wall -pedantic -Wno-long-long -g
INCLUDEDIRS = -I.. -I../backends
LIBDIRS =
LIBS =


test-empty : test-empty.o ../soci.o ../backends/soci-empty.o
	${COMPILER} -o $@ test-empty.o ../soci.o ../backends/soci-empty.o ${LIBDIRS} ${LIBS}

test-empty.o : test-empty.cpp ../soci.h ../backends/soci-empty.h
	${COMPILER} -c test-empty.cpp ${CXXFLAGS} ${INCLUDEDIRS}

../soci.o : ../soci.cpp ../soci.h
	${COMPILER} -c -o $@ ../soci.cpp ${CXXFLAGS} ${INCLUDEDIRS}

../backends/soci-empty.o : ../backends/soci-empty.cpp ../backends/soci-empty.h ../soci.h
	${COMPILER} -c -o $@ ../backends/soci-empty.cpp ${CXXFLAGS} ${INCLUDEDIRS}


clean :
	rm -f test-empty test-empty.o
